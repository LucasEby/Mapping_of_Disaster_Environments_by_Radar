import serial
#import os
import time
ser = serial.Serial('/dev/ttyACM1', 9600)
ser.write('110,')

#import os
#os.getcwd()

#import time
file = open('samples.csv')
while 1:
   line = file.readline()
   if not line:
         break
   ser.write(line)
   time.sleep(3)

file.close()
